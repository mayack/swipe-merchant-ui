                    .s-cell.s-text-size--xl
                      a.icon-search.s-padding--xs.s-text-baseline--single.s-shape-circle.s-swatch-default(href='javascript:void(0)')
                    .s-cell.s-text-size--l.s-expand
                      input(placeholder='Search invoices, clients, products...')
                .s-cell.s-text-nowrap.s-text-size--xl.s-items-spacing--xs
                  a.s-comment.s-text-size--xl-baseline--single.s-padding--xs.s-shape-circle.icon-bell.new(href='javascript:void(0)' data-tooltip='Notifications' data-popover='notificationCenter')
                  a.s-comment.s-text-size--xl-baseline--single.s-padding--xs.s-shape-circle.icon-gear(href='javascript:void(0)' data-tooltip='Settings')
                  a.s-comment.s-text-size--xl-baseline--single.s-padding--xs.s-shape-circle.icon-logout(href='javascript:void(0)' data-tooltip='Log out')
            main#content.s-padding-top--l.s-padding-bottom--l
              .s-wrapper
                block page
                block content
          include sidebar-right
    .smartSearchOverlay.s-swatch-coal.barWidth
      .s-wrapper.s-padding-top--l.s-padding-bottom--l
        .smartSearchContent.s-items-spacingVertical--l
          section.s-items-spacingVertical--xs
