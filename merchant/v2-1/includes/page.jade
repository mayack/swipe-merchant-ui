            include smart-search-client
          //- Only for the demonstrational purposes
          button(onclick='$(this).parent().hide();$(this).parent().next().fadeIn(300);') Show no results
        .smartSearchContent.smartSearchEmpty.s-align-center(style='display:none')
          .icon-search.s-text-size--9xl.s-margin-bottom--xs
          .s-text-size--xl-caps-semibold Sorry, nothing found
        .loadMe.s-text-size--3xl
